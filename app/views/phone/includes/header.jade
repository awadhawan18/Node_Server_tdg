
header.header.row
  .content-wrapper
    .pull-left
      .mob-menu-bars.js-mob-menu
        span menu
    .col-xs-6
      a.home-icon(href='/' title="traveldglobe home - where to go")
        img(src="/resources/phone/images/logo/traveldglobe-red.png" alt="travel d\'globe | Home")
        .tag-line Where to go
    .col-xs-5.text-right
      if user
        .header-menu
          .login-icon(href="/auth/facebook?returnUrl=#{req.url}")
            mixin paintIcon('traveller', {size: {y : '35',x : '20'}, strokeWidth:2})
          .drop-menu
            ul.menu
              li
                a(href='#') Hi #{user.user_name}
              li
                a(href='/trip') Travel With Strangers
              li
                a(href='/traveller/#{user.slug}')  My profile and stories
              li
                a(href="/user/logout?returnUrl=#{req.url}")  Log out
        script.
          var lgud = {userName:'#{user.user_name}',userEmail:'#{user.email}', userMobile: '#{user.mobile}'};
      else
        a.tr-login(href="/auth/facebook?returnUrl=#{req.url}")
          span Login
          span.login-icon
            mixin paintIcon('traveller', {size: {y : '35',x : '20'}, strokeWidth:2})
        script.
          var lgud = {};

    if !hideSearch
      .col-xs-12
        .search-box
          a.search-icon(href="#{host}/search")
            mixin paintIcon('search', {fill:'#333333'})
          input(type="search" class="form-control js-autoSearch" placeholder="Search Kasol, Mcleodganj or Triund")
          .loader Searching...
